{% extends 'base.html.twig' %}

{% block title %}Mes annonces{% endblock %}

{% block body %}
    <h1>Mes annonces</h1>

    <div class="container">
        <section class="mesAnnonces">
            {% for annonce in annonces %}
                <div class="row">
                    <div class="col s12">
                        <div class="card" style="border-radius: 10px;background-color: lightgreen;">
                            <span class="card-title"><h3>{{ annonce.nomAnimal }}</h3></span>
                            <div class="card-content">
                                <p>{{ annonce.espece }}</p>
                                <p>{{ annonce.ville }}</p>
                                <p>Date de création de l'annonce: {{ annonce.atCreated ? annonce.atCreated|date('d-m-Y') : '' }}</p>
                                <p>Age: {{ annonce.nbrViews }} ans</p>
                                <p>Nombre de vues : {{ annonce.nbrViews }} </p>
                            </div>
                            <div class="row">
                                <div class="col s12 m6">
                                    <form method="post" action="{{ path('annonce_toggle_is_published', {'id': annonce.id}) }}">
                                        <button class="btn" style="background-color: {{ annonce.isPublished ? 'green' : 'red' }}">{{ annonce.isPublished ? 'Publié' : 'Brouillon' }}</button>
                                    </form>
                                    <form method="post" action="{{ path('annonce_toggle_is_finish', {'id': annonce.id}) }}">
                                        <button class="btn" style="background-color: {{ annonce.isFinish ? 'green' : 'red' }}">{{ annonce.isFinish ? 'Donné' : 'En attente' }}</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <p>Pas d'annonce</p>
                </div>
            {% endfor %}
        </section>
    </div>


    <table class="responsive-table striped">
        <thead>
            <tr>
                <th>Nom Animal</th>
                <th>Espece</th>
                <th>Ville</th>
                <th>Date de création</th>
                <th>Nombre de Vue</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.nomAnimal }}</td>
                <td>{{ annonce.espece }}</td>
                <td>{{ annonce.ville }}</td>
                <td>{{ annonce.atCreated ? annonce.atCreated|date('d-m-Y') : '' }}</td>
                <td>{{ annonce.nbrViews }}</td>
                <td>
                    <a class="btn" href="{{ path('annonce_show', {'id': annonce.id}) }}">visualiser</a>
                    <a class="btn" href="{{ path('annonce_edit', {'id': annonce.id}) }}">Modifier</a>
                    {{ include('annonce/_delete_form.html.twig') }}
                    <form method="post" action="{{ path('annonce_toggle_is_published', {'id': annonce.id}) }}">
                        <button class="btn" style="background-color: {{ annonce.isPublished ? 'green' : 'red' }}">{{ annonce.isPublished ? 'Publié' : 'Brouillon' }}</button>
                    </form>
                    <form method="post" action="{{ path('annonce_toggle_is_finish', {'id': annonce.id}) }}">
                        <button class="btn" style="background-color: {{ annonce.isFinish ? 'green' : 'red' }}">{{ annonce.isFinish ? 'Donné' : 'En attente' }}</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Pas d'annonce</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-annonce" style="margin-top: 20px ; margin-bottom: 20px;">
        <a class="btn" href="{{ path('annonce_new') }}">Créer annonce</a>
    </div>
{% endblock %}