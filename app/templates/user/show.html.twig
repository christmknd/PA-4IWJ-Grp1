{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <h1>{{ user.pseudo }}</h1>

    <table class="table" style="border: 1px solid black">
        <tbody>

            <tr>
                <th> <i class="small material-icons"> account_box</i> </th>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th> <i class="small material-icons">email</i> </th>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th> <i class="small material-icons">verified_user</i> </th>
                <th>Compte vérifié</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                {% if not user.isVerified %}
                    <td>
                        <form  method="post" action="{{ path('user_post_mail') }}">
                            <button style ="background-color: #2446af; margin: 5px" class="btn">Envoyer lien d'activation</button>
                        </form>
                    </td>
                {% endif %}
            </tr>
            <tr>
                <th> <i class="small material-icons">supervisor_account</i> </th>
                <th>Type de compte</th>
                <td>{{ user.typeDeCompte }}</td>
            </tr>
            {% if app.user.typeDeCompte == "Association" %}
            <tr>
                <th>Siret (Valide par INSEE)</th>
                <td>{{ user.siret }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <div class="container" style="margin: 25px">
        <div class="row">
                <div class="col s12">
                    <a href="{{ path('user_edit') }}">
                        <button style ="background-color:#ffcc00; margin: 5px" class="btn">
                            Modifier profil
                        </button>
                    </a>
                </div>
                <div class="col s12">
                    <a href="{{ path('app_forgot_password_request') }}">
                        <button style ="background-color:#ffcc00; margin: 5px" class="btn">
                            Modifier mot de passe
                        </button>
                    </a>
                </div>
                <div class="col s12">
                    {{ include('user/_delete_form.html.twig') }}
                </div>
        </div>
    </div>


{% endblock %}
