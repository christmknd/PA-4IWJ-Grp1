{% extends 'BackEnd/base.html.twig' %}

{% block title %}Le profil{% endblock %}

{% block body %}
    <h1>Le profil</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Compte vérifié</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Type de compte</th>
                <td>{{ user.typeDeCompte }}</td>
            </tr>
            {% if app.user.typeDeCompte == "association" %}
            <tr>
                <th>Siret</th>
                <td>{{ user.siret }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('admin_users_edit', {'id': user.id}) }}">
    <button style ="background-color:#ffcc00; margin: 5px" class="btn">
        Modifier profil
    </button>
    </a>

    {{ include('BackEnd/user/_delete_form.html.twig') }}

    <a class="btn" href="{{ path('admin_users') }}">Revenir à la liste</a>
{% endblock %}
